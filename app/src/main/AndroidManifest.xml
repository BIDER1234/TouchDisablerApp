<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.touchdisabler">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application android:label="Touch Disabler" android:theme="@android:style/Theme.Material.Light.NoActionBar" android:icon="@mipmap/ic_launcher">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".TouchBlockService" android:exported="false"/>
    </application>
</manifest>